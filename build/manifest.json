{
    "name": "Dark Mode Everything",
    "description": "Dark mode for every website!",
    "version": "1.0",
    "manifest_version": 2,
    "content_scripts": [ 
        {
            "js": [ "content/darkmode.js" ],
            "matches": [ "<all_urls>" ],
            "run_at": "document_start"
        } 
    ],
    "browser_action": {
        "default_popup": "popup/index.html"
    },
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "web_accessible_resources": [
        "content/content.css"
    ],
    "permissions": [
        "tabs",
        "webNavigation",
        "declarativeContent",
        "http://*/",
        "https://*/"
    ]   
}